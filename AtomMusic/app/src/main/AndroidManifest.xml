<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidexample.atommusic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShuffleAllActivity"
            android:label="@string/title_activity_shuffle">
            </activity>
        <activity
            android:name=".RecentActivity"
            android:label="@string/title_activity_recent">
        </activity>
        <activity
            android:name=".SongsActivity"
            android:label="@string/title_activity_songs">
        </activity>
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/title_activity_albums">
        </activity>
        <activity
            android:name=".PlaylistsActivity"
            android:label="@string/title_activity_playlists">
        </activity>
        <activity
            android:name=".ArtistsActivity"
            android:label="@string/title_activity_artists">
        </activity>
        <activity
            android:name=".GenresActivity"
            android:label="@string/title_activity_genres">
        </activity>
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/title_activity_nowPlaying">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
    </application>

</manifest>